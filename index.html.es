  <script>
    // Add support link
    head.ready('dom', function() {
      Tender = {
        hideToggle: true,
        widgetToggles: [document.getElementById('contact-link')]
      }
      head.js('https://tvshows.tenderapp.com/tender_widget.js');
    });

    // Add link to Shimmer for logged admins
    if (document.cookie.indexOf('shimmer_session') != -1) {
      head.ready('dom', function() {
        document.getElementById('logo').innerHTML = '<a id="shimmer" href="shimmer">Shimmer!</a>' + document.getElementById('logo').innerHTML + '</a>';
      });
    }

    // Lets infer the currency of the user
    head.ready('dom', function() {
      var gmtHours = -new Date().getTimezoneOffset()/60;

      // If the user is not from "Europe", set the paypal link to USD
      if (gmtHours > 4 || gmtHours < -1) {
        var donateButton = document.getElementById('donate-button');
        donateButton.href = donateButton.href.replace('EUR', 'USD');
      }
    });

    // Load Fancy Zoom for non-mobile devices
    var width = window.outerWidth ||
                      document.documentElement.clientWidth;
    if (width > 720) {
      head.js('js/libs/FancyZoom.js', function() {
        head.ready(setupZoom);
      });
    }

    // Load Tumblr content
    window.tumblrCallback = function(response) {
      var content = '<ul>\n';
      var link;
      for (var i = 0; i < response.posts.length && i < 10; i++) {
        link = response.posts[i];
        if (link['regular-title']) {
          content += '<li><a href="' + link.url + '">';
          content += link['regular-title'] + '</a></li>\n';
        }
      }
      content += '</ul>\n';
      head.ready('dom', function() {
        document.getElementById('tumblr-content').innerHTML = content;
      });
    }
    head.js('http://blog.tvshowsapp.com/api/read/json?callback=tumblrCallback');

    // Google Analytics (if in production)
    if (location.host == 'tvshowsapp.com') {
      head.js('http://www.google-analytics.com/ga.js', function() {
        var tracker = _gat._getTracker('UA-59149-8');
        tracker._trackPageview();
      });
    }
  </script>

